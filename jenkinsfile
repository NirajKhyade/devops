pipeline {
    agent any
    tools{
         maven "maven3"
     }
     stages{
         stage('Build Maven'){
             steps{
                 checkout([$class: 'GitSCM', branches: [[name: '*/JenkinsDocker']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/NirajKhyade/devops.git']]])
                 sh 'mvn clean install'
             }
        }
         stage('Build docker image'){
             steps{
                script{
                    sh 'docker build -t nirajkhyade/jenkins .'
                }
             }
            }
        }
}